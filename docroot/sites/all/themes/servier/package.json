{
  "name": "servier",
  "version": "1.0.0",
  "description": "Custom Drupal theme",
  "scripts": {
    "css:lint": "stylelint \"scss/**/*.scss\"",
    "css:sass": "node-sass --output-style compressed scss/style.scss css/style.css",
    "css:prefix": "postcss --no-map -u autoprefixer -r css/style.css",
    "css:minify": "cleancss -O2 -o css/style.css css/style.css",
    "css:compile": "node-sass --output-style compressed scss/style.scss | postcss --no-map -u autoprefixer -o css/style.css && cleancss -O2 -o css/style.css css/style.css",
    "js:lint": "eslint js/scripts.js",
    "js:minify": "uglifyjs js/scripts.js -m -c -o js/scripts.min.js",
    "build:css": "run-p css:compile css:lint && echo CSS build complete | chalk green",
    "build:js": "run-p js:minify js:lint && echo JS build complete | chalk green",
    "build": "run-p build:css build:js",
    "watch:css": "onchange \"scss/style.scss\" \"scss/*/*.scss\" -i -- npm run build:css",
    "watch:js": "onchange \"js/scripts.js\" -i -- npm run build:js",
    "watch": "run-p watch:css watch:js"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "chalk-cli": "^4.0.0",
    "clean-css-cli": "^4.1.11",
    "eslint": "^5.0.1",
    "node-sass": "^4.9.1",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "postcss-cli": "^5.0.1",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3",
    "uglify-js": "^3.4.3"
  },
  "browserslist": [
    "cover 99%",
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ]
}
